{
  "name": "horimisli.me",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22.17.1",
    "npm": "11.4.2"
  },
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "prod": "npm run gen-feed && npm run gen-sitemap && next build",
    "gen-feed": "tsx -r dotenv/config scripts/feed.ts",
    "gen-sitemap": "tsx -r dotenv/config scripts/sitemap.ts",
    "gen-image": "tsx -r dotenv/config scripts/resize_image.ts",
    "import": "tsx -r dotenv/config scripts/bear_note_importer.ts",
    "push-entries": "cd posts;git add .;git commit -m 'add post'; git p; cd ../public/images; git add .; git commit -m 'add post'; git p; cd ../..",
    "pull-entries": "cd posts;git pull; cd ../public/images; git pull; cd ../..",
    "release": "gh workflow run release.yml",
    "release-watch": "npm run release && gh run list --workflow=release.yml --json=databaseId --limit=1 --jq '.[].databaseId' | xargs -IJOB_ID gh run watch JOB_ID",
    "init-ci": "npm i && git clone https://${GH_TOKEN}@github.com/horimislime/articles.git ./posts && git clone https://${GH_TOKEN}@github.com/horimislime/article-images.git public/images"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.7.2",
    "@fortawesome/free-solid-svg-icons": "6.7.2",
    "@fortawesome/react-fontawesome": "0.2.2",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/typography": "0.5.16",
    "@vercel/analytics": "^1.0.1",
    "adm-zip": "0.5.16",
    "date-fns": "4.1.0",
    "date-fns-timezone": "0.1.4",
    "dotenv": "17.2.0",
    "gray-matter": "4.0.3",
    "luxon": "3.7.1",
    "next": "15.4.1",
    "prismjs": "1.29.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-emoji-render": "2.0.1",
    "react-markdown": "^10.0.0",
    "react-syntax-highlighter": "15.6.1",
    "rehype-highlight": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.0",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "remark-prism": "1.3.6",
    "remark-unwrap-images": "^5.0.0",
    "rss": "1.2.2",
    "sharp": "^0.34.0",
    "tsconfig-paths": "^4.2.0",
    "unified": "^11.0.4",
    "uniorg": "^1.1.1",
    "uniorg-extract-keywords": "^1.0.1",
    "uniorg-parse": "^3.0.0",
    "uniorg-rehype": "^2.0.0"
  },
  "devDependencies": {
    "@types/adm-zip": "0.5.7",
    "@types/luxon": "3.6.2",
    "@types/node": "22.16.4",
    "@types/prismjs": "1.26.5",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/react-syntax-highlighter": "15.5.13",
    "@types/remark-prism": "1.3.7",
    "@types/rss": "0.0.32",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "@typescript-eslint/parser": "8.37.0",
    "autoprefixer": "10.4.21",
    "eslint": "9.31.0",
    "eslint-config-next": "15.4.1",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "postcss": "8.5.6",
    "prettier": "^3.5.3",
    "tailwindcss": "4.1.11",
    "textlint": "15.2.0",
    "textlint-rule-preset-ja-spacing": "2.4.3",
    "textlint-rule-preset-ja-technical-writing": "12.0.2",
    "textlint-rule-spellcheck-tech-word": "5.0.0",
    "tsx": "^4.19.4",
    "typescript": "5.8.3"
  },
  "overrides": {
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6"
  }
}
