{
  "name": "horimisli.me",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22.16.0",
    "npm": "10.9.2"
  },
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "prod": "npm run gen-feed && npm run gen-sitemap && next build",
    "gen-feed": "tsx -r dotenv/config scripts/feed.ts",
    "gen-sitemap": "tsx -r dotenv/config scripts/sitemap.ts",
    "gen-image": "tsx -r dotenv/config scripts/resize_image.ts",
    "import": "tsx -r dotenv/config scripts/bear_note_importer.ts",
    "push-entries": "cd posts;git add .;git commit -m 'add post'; git p; cd ../public/images; git add .; git commit -m 'add post'; git p; cd ../..",
    "pull-entries": "cd posts;git pull; cd ../public/images; git pull; cd ../..",
    "release": "gh workflow run release.yml",
    "release-watch": "npm run release && gh run list --workflow=release.yml --json=databaseId --limit=1 --jq '.[].databaseId' | xargs -IJOB_ID gh run watch JOB_ID",
    "init-ci": "npm i && git clone https://${GH_TOKEN}@github.com/horimislime/articles.git ./posts && git clone https://${GH_TOKEN}@github.com/horimislime/article-images.git public/images"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.4.0",
    "@fortawesome/free-solid-svg-icons": "6.4.0",
    "@fortawesome/react-fontawesome": "0.2.0",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/typography": "0.5.9",
    "@vercel/analytics": "^1.0.1",
    "adm-zip": "0.5.10",
    "date-fns": "2.29.3",
    "date-fns-timezone": "0.1.4",
    "dotenv": "16.0.3",
    "gray-matter": "4.0.3",
    "luxon": "3.3.0",
    "next": "15.3.3",
    "prismjs": "1.29.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-emoji-render": "2.0.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "15.5.0",
    "rehype-highlight": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.0",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "remark-prism": "1.3.6",
    "remark-unwrap-images": "^4.0.0",
    "rss": "1.2.2",
    "sharp": "^0.32.6",
    "tsconfig-paths": "^4.2.0",
    "unified": "^11.0.4",
    "uniorg": "^1.1.1",
    "uniorg-extract-keywords": "^1.0.1",
    "uniorg-parse": "^2.1.1",
    "uniorg-rehype": "^1.1.1"
  },
  "devDependencies": {
    "@types/adm-zip": "0.5.0",
    "@types/luxon": "3.3.0",
    "@types/node": "18.16.3",
    "@types/prismjs": "1.26.0",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.6",
    "@types/react-syntax-highlighter": "15.5.6",
    "@types/remark-prism": "1.3.4",
    "@types/rss": "0.0.30",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "autoprefixer": "10.4.14",
    "eslint": "8.39.0",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "postcss": "8.4.31",
    "prettier": "^3.5.3",
    "tailwindcss": "3.3.2",
    "textlint": "13.3.2",
    "textlint-rule-preset-ja-spacing": "2.3.0",
    "textlint-rule-preset-ja-technical-writing": "7.0.0",
    "textlint-rule-spellcheck-tech-word": "5.0.0",
    "tsx": "^4.19.4",
    "typescript": "5.0.4"
  },
  "overrides": {
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.6"
  }
}
