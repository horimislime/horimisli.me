{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2020",
    "module": "commonjs",
    "noImplicitReturns": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
