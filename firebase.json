{
  "functions": {
    "source": "functions",
    "runtime": "nodejs10"
  },
  "hosting": {
    "public": "_site",
    "rewrites": [
      {
        "source": "/images/**",
        "function": "onRequestResizedImage"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      },
      {
        "source": "404.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      }
    ]
  }
}
